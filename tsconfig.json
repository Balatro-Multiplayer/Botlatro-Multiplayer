{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "typeRoots": ["src/@types", "node_modules/@types"],
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "type": "module",
}
